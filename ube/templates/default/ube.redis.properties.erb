<%= "redis.host=#{@redis_host}" if @redis_host %>
<%= "redis.port=#{@redis_port}" if @redis_port %>

<%= "redis.sentinel.name=#{@redis_sentinel_name}" if @redis_sentinel_name %>

<%
    @hosts.each_with_index do |instance, i|
%>
<%= "redis.#{i}.host=#{instance[:host]}" %>
<%= "redis.#{i}.port=#{instance[:port]}" %>
<%
    end
%>